{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "properties": {
    "$schema": {
      "type": "string"
    },
    "authors": {
      "title": "Authors of the requested document",
      "type": "string"
    },
    "document_pid": {
      "title": "The persistent identifier of the created Document",
      "type": "string"
    },
    "edition": {
      "title": "Edition of the requested document",
      "type": "string"
    },
    "isbn": {
      "title": "ISBN of the requested document",
      "type": "string"
    },
    "issn": {
      "title": "ISBN of the requested document",
      "type": "string"
    },
    "issue": {
      "title": "Issue of the requested document",
      "type": "string"
    },
    "journal_title": {
      "title": "Journal title of the requested document",
      "type": "string"
    },
    "legacy_id": {
      "type": "string",
      "title": "The previous id of this document request before data migration"
    },
    "medium": {
      "title": "Medium of the requested document (Vocabulary)",
      "type": "string"
    },
    "note": {
      "title": "Note of the requested document",
      "type": "string"
    },
    "page": {
      "title": "Page of the requested document",
      "type": "string"
    },
    "patron_pid": {
      "title": "The persistent identifier of the patron who made the request",
      "type": "string"
    },
    "payment_info": {
      "title": "A generic budget code for document request",
      "type": "string"
    },
    "payment_method": {
      "title": "The payment method for a document request (Vocabulary)",
      "type": "string"
    },
    "physical_item_provider": {
      "properties": {
        "pid": {
          "title": "The pid of the Acquisition purchase order, or ILL borrow request",
          "type": "string"
        },
        "pid_type": {
          "title": "The pid type of the aforementioned pid, Acquisition or Interlibrary",
          "type": "string"
        }
      },
      "type": "object"
    },
    "pid": {
      "title": "The persistent identifier of this Request",
      "type": "string"
    },
    "publication_year": {
      "title": "Publication year of the requested document",
      "type": "integer"
    },
    "reject_reason": {
      "title": "The type of request reject",
      "type": "string"
    },
    "request_type": {
      "title": "The type of the request (Vocabulary)",
      "type": "string"
    },
    "standard_number": {
      "title": "Standard number of the requested document",
      "type": "string"
    },
    "state": {
      "description": "The state of this Request",
      "type": "string"
    },
    "title": {
      "title": "Title of the requested document",
      "type": "string"
    },
    "volume": {
      "title": "Volume of the requested document",
      "type": "string"
    }
  },
  "required": [
    "$schema",
    "pid",
    "state",
    "patron_pid",
    "title",
    "request_type",
    "medium"
  ],
  "title": "Schema for Document Request",
  "type": "object"
}
