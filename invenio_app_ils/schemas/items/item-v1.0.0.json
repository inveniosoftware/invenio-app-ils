{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Schema for Item",
  "type": "object",
  "required": ["$schema", "internal_location", "barcode", "status", "item_pid"],
  "properties": {
    "$schema": {
      "type": "string"
    },
    "item_pid": {
      "type": "string",
      "title": "Item ID"
    },
    "document": {
      "type": "object",
      "properties": {
        "$ref": {
          "type": "string"
        }
      }
    },
    "internal_location_pid": {
      "type": "string",
      "title": "Internal Location ID"
    },
    "internal_location": {
      "type": "object",
      "properties": {
        "$ref": {
          "type": "string"
        }
      }
    },
    "legacy_id": {
      "type": "string",
      "title": "Legacy Item ID"
    },
    "legacy_library_id": {
      "type": "string",
      "title": "Legacy Library ID"
    },
    "barcode": {
      "type": "string",
      "title": "Item barcode"
    },
    "shelf": {
      "type": "string",
      "title": "Item shelf location"
    },
    "description": {
      "type": "string",
      "title": "Extra description for the Item"
    },
    "circulation_restriction": {
      "type": "string",
      "title": "Circulation restriction on the Item"
    },
    "medium": {
      "type": "string",
      "enum": ["NOT_SPECIFIED", "ONLINE", "PAPER", "CDROM", "DVD", "VHS"],
      "title": "Medium's Item"
    },
    "status": {
      "type": "string",
      "enum": ["LOANABLE", "MISSING", "IN_BINDING", "SCANNING"],
      "title": "Item's status"
    },
    "circulation_status": {
      "type": "object",
      "properties": {
        "$ref": {
          "type": "string"
        }
      }
    }
  }
}
