    "publication_info": {
      "items": {
        "additionalProperties": false,
        "properties": {
          "artid": {
            "minLength": 1,
            "title": "Article ID",
            "type": "string"
          },
          "conference": {
            "properties": {
              "acronym": {
                "minLength": 1,
                "type": "string"
              },
              "cern_conference_code": {
                "minLength": 1,
                "type": "string"
              },
              "cnum": {
                "minLength": 1,
                "pattern": "^C\\d\\d-\\d\\d-\\d\\d(\\.\\d+)?$",
                "title": "CNUM identifier of the conference",
                "type": "string"
              },
              "closing_date": {
                "format": "date",
                "minLength": 1,
                "type": "string"
              },
              "contact": {
