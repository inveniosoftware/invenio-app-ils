{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Schema for Internal Location",
  "type": "object",
  "required": ["$schema", "pid", "location", "location_pid", "name"],
  "properties": {
    "$schema": {
      "type": "string"
    },
    "legacy_id": {
      "type": "string",
      "title": "The previous id of this Internal Location before migration"
    },
    "location_pid": {
      "type": "string",
      "title": "The persistent identifier of the Location of this Internal Location"
    },
    "location": {
      "type": "object",
      "properties": {
        "$ref": {
          "type": "string"
        }
      }
    },
    "name": {
      "type": "string",
      "title": "Name of this Internal Location"
    },
    "notes": {
      "type": "string",
      "title": "Extra notes"
    },
    "physical_location": {
      "type": "string",
      "title": "The physical location of this Internal Location"
    },
    "pid": {
      "type": "string",
      "title": "The persistent identifier of this Internal Location"
    }
  }
}
