{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Schema EItem",
  "type": "object",
  "required": ["$schema", "pid", "document_pid", "document"],
  "properties": {
    "$schema": {
      "type": "string"
    },
    "document_pid": {
      "type": "string",
      "title": "The persistent identifier of its Document"
    },
    "document": {
      "type": "object",
      "properties": {
        "$ref": {
          "type": "string"
        }
      }
    },
    "pid": {
      "type": "string",
      "title": "The persistent identifier of this EItem"
    },
    "description": {
      "type": "string",
      "title": "Any extra description for this EItem"
    },
    "internal_notes": {
      "type": "string",
      "title": "Any extra description for this EItem reserved for internal usage"
    },
    "files": {
      "items": {
        "type": "object",
        "properties": {
          "bucket": {
            "type": "string"
          },
          "checksum": {
            "type": "string"
          },
          "key": {
            "type": "string"
          },
          "size": {
            "type": "integer"
          },
          "type": {
            "description": "File type extension.",
            "type": "string"
          },
          "category": {
            "type": "string"
          },
          "version_id": {
            "type": "string"
          }
        }
      },
      "minItems": 1,
      "title": "List of files",
      "type": "array"
    },
    "urls": {
      "items": {
        "type": "string"
      },
      "type": "array",
      "description": "A list of urls."
    },
    "open_access": {
      "type": "boolean",
      "title": "Indicate if the access to this EItem is open or not"
    }
  }
}
