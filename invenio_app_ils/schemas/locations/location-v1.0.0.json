{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Schema for Location",
  "type": "object",
  "required": ["$schema", "location_pid"],
  "properties": {
    "$schema": {
      "type": "string"
    },
    "location_pid": {
      "type": "string",
      "title": "The persistent identifier of this Location"
    },
    "name": {
      "type": "string",
      "title": "The name of this Location"
    },
    "address": {
      "type": "string",
      "title": "The address of this Location"
    },
    "email": {
      "type": "string",
      "title": "A contact email"
    },
    "phone": {
      "type": "string",
      "title": "A contact phone"
    },
    "notes": {
      "type": "string",
      "title": "Extra notes"
    }
  }
}
