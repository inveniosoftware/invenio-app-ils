{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Schema for Acquisition order",
  "type": "object",
  "required": ["$schema", "pid", "name"],
  "properties": {
    "$schema": {
      "type": "string"
    },
    "pid": {
      "type": "string",
      "title": "The persistent identifier of Acquisition order"
    },
    "document_pid": {
      "type": "string",
      "title": "The persistent identifier of its Document"
    },
    "vendor_pid": {
      "type": "string",
      "title": "The persistent identifier of its Vendor"
    },
    "patron_pid": {
      "title": "The persistent identifier of the patron who made the request",
      "type": "string"
    },
    "status": {
      "title": "Status of Acquisition order",
      "type": "string"
    },
    "cancel_reason": {
      "title": "Reason for cancelling the request",
      "type": "string"
    },
    "order_date": {
      "format": "date",
      "minLength": 1,
      "title": "Date of order",
      "type": "string"
    },
    "expected_delivery_date": {
      "format": "date",
      "minLength": 1,
      "title": "Expected delivery date of order",
      "type": "string"
    },
    "number_of_copies_ordered": {
      "title": "Number of copies ordered",
      "type": "integer"
    },
    "number_of_copies_received": {
      "title": "Number of copies received",
      "type": "integer"
    },
    "estimated_cost_details": {
      "title": "Details about order's estimated cost",
      "type": "string"
    },
    "final_cost_details": {
      "type": "object"
    },
    "funds": {
      "items": {
        "type": "string"
      },
      "title": "List of funds",
      "type": "array",
      "uniqueItems": true
    },
    "notes": {
      "description": "The notes of Acquisition order",
      "type": "string"
    }
  }
}
