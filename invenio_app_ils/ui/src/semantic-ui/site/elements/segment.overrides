/*******************************
         Site Overrides
*******************************/

.ui.segment.highlighted{
  background-color: @highlightBackgroundColor;
  padding: 1.6em;
}

.document-panel{
  .ui.segment{
    margin: 0 0 1rem 0;
  }
}

.ui.segment.tab{
  background-color: inherit;
  padding: 0;
}

.section {
  .ui.segment{
    .table{
      background-color: inherit;
    }
  }

}
